<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dctrbg"
    tools:context=".patientlog">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/pat"
        android:id="@+id/img2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PATIENT LOGIN"
        android:layout_marginLeft="100dp"
        android:fontFamily="@string/fab_transformation_sheet_behavior"
        android:textSize="30dp"
        android:textColor="#d61919"
       />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hi@gmail.com"
            android:id="@+id/email"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_email_black_24dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
           android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"
            android:padding="10dp"

            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:id="@+id/pswd"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttn"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="18dp"
            android:text="LOGIN "
            android:fontFamily="sans-serif-condensed"
            android:textSize="36dp"
            android:id="@+id/btnn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textSize="20dp"
            android:id="@+id/patlogfrgt"
            android:layout_marginTop="20dp"
            android:textColor="#da17bd"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:id="@+id/patentreg"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:textColor="#da17bd"/>
    </LinearLayout>

</LinearLayout>