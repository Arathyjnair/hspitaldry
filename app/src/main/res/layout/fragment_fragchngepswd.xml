<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dctrbg"
    tools:context=".fragchngepswd">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/changelock"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp"
        android:textSize="45dp"
        android:textColor="#df1313"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old password"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:id="@+id/patoldpswd"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:id="@+id/patnewpswd"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp" />
    </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:textSize="25dp"
          android:layout_weight="1"
            android:text="ID is : "
            android:padding="10dp"

            >
        </TextView>

       <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:textSize="25dp"
                android:id="@+id/patchngid"
                android:text=""
                android:padding="10dp"
           android:layout_weight="1"

                >
       </TextView>
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:id="@+id/patchngsbt"
        android:background="@drawable/btn1"/>
</LinearLayout>
</FrameLayout>